class Solution {
public:
    int moves=0;
    int distributeCoins(TreeNode* root) {
        dfs(root);
        return moves;

        
    }
    int dfs(TreeNode*root){
        if(root==nullptr) return 0;
        int left=dfs(root->left);
        int right=dfs(root->right);
        moves+=abs(left)+abs(right);
        return root->val-1+left+right;
    }
    
};
