class Solution {
public:
    vector<int> sortArrayByParity(vector<int>& nums) {
        int n=nums.size();
        vector<int>ans(n);
        int x=0;
        int right=n-1;
        for(int i=0;i<n;i++){
            if(nums[i]%2==0){
                ans[x]=nums[i];
                x++;
            }
            else{
                ans[right--]=nums[i];
                
            }
        }
        return ans;
    }
};
